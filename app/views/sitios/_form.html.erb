<%= form_for(@sitio) do |f| %>
  <% if @sitio.errors.any? %>
  
		    <div id="error_explanation">
		    	
		      <h2 class="jumbotron"> <%= pluralize(@sitio.errors.count, "error") %> :</h2>
		
		      <ul>
			      <% @sitio.errors.full_messages.each do |message| %>
			        <li class="bs-callout bs-callout-danger"><%= message %></li>
			      <% end %>
		      </ul>
		      
		    </div>
    
  <% end %>

  <div class="form-group">
    <%= f.label :titulo %><br>
    <%= f.text_field :titulo, :class=>"form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :direccion %><br>
    <%= f.text_field :direccion, :class=>"form-control" %>
  </div>
  <small class="text-muted">Tambien se puede poner una dirección IP. Tu IP es: <span class="badge"><%= request.ip %></span></small>
  
  <div class="form-group">
    <%= f.label :notas %><br>
    <%= f.text_area :notas, :class=>"form-control" %>
  </div>
  
	 <% if @sitio.new_record? %>
		 <% else %> 
		  <div class="form-group">
		    <%= f.label :latitude %><br>
		    <%= f.text_field :latitude,:readonly => true, :class=>"form-control" %>
		  </div>
		  
		  <div class="form-group">
		    <%= f.label :longitude %><br>
		    <%= f.text_field :longitude,:readonly => true, :class=>"form-control" %>
		  </div>
		  
		   <div class="form-group">
		    <%= f.label 'Código Postal' %><br>
		    <%= f.text_field :postal_code,:readonly => true, :class=>"form-control" %>
		  </div>
	<% end %>

<br>
	
  <div class="actions">
    <%= f.submit ( f.object.new_record? ? "Crear" : "Actualizar"), :class => 'btn btn-info btn-block' %>
  </div>
  
<% end %>
